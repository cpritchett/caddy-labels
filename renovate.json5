{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    // Best practices preset includes:
    // - config:recommended (base sensible defaults)
    // - docker:pinDigests (pin Docker image digests)
    // - helpers:pinGitHubActionDigests (pin GitHub Action SHAs)
    // - :pinDevDependencies (reproducible dev environments)
    // - :configMigration (auto-update Renovate config)
    // - abandonments:recommended (detect abandoned packages)
    // - security:minimumReleaseAgeNpm (avoid brand-new releases)
    "config:best-practices",
    // Explicitly enable semantic commits for conventional commit format
    ":semanticCommits",
    // Use 'chore' prefix for all dependency updates to keep them out of release notes
    ":semanticCommitTypeAll(chore)"
  ],
  // Limit concurrent PRs to reduce noise and CI load
  "prConcurrentLimit": 10,
  // Schedule updates to run during off-hours (UTC)
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "packageRules": [
    // Group ESLint and related packages into a single PR
    {
      "matchPackagePatterns": [
        "eslint",
        "^eslint-plugin-",
        "^@typescript-eslint/",
        "eslint-config-.*"
      ],
      "groupName": "ESLint and related packages"
    },
    // Group commitlint packages together
    {
      "matchPackagePatterns": [
        "^@commitlint/",
        "^commitlint"
      ],
      "groupName": "Commitlint packages"
    },
    // Automerge devDependencies with passing tests
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    // Automerge GitHub Actions with pinned digests
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    // Automerge mise tool updates for non-breaking versions
    {
      "matchManagers": ["mise"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ]
  // Renovate has built-in support for mise and will automatically detect
  // and update tools defined in .mise.toml files.
  // The GitHub Actions manager is enabled by default if workflow files are present.
}
