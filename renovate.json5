{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':semanticCommits',
    ':semanticCommitTypeAll(chore)',
  ],
  prConcurrentLimit: 10,
  schedule: [
    'after 10pm every weekday',
    'before 5am every weekday',
    'every weekend',
  ],
  packageRules: [
    {
      groupName: 'ESLint and related packages',
      matchPackageNames: [
        '/eslint/',
        '/^eslint-plugin-/',
        '/^@typescript-eslint//',
        '/eslint-config-.*/',
      ],
    },
    {
      groupName: 'Commitlint packages',
      matchPackageNames: [
        '/^@commitlint//',
        '/^commitlint/',
      ],
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
    {
      matchManagers: [
        'github-actions',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
    {
      matchManagers: [
        'mise',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'squash',
    },
  ],
}
